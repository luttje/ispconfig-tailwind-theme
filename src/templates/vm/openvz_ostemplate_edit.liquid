                    {{ active }}
                </div>
            </div>
            <div class="form-group">
                <label for="description" class="col-sm-3 control-label">{{ description_txt }}</label>
                <div class="col-sm-9"><textarea class="form-control" name="description" id="description" rows='10' cols='30'>{{ description }}</textarea></div>
            </div>


        <input type="hidden" name="id" value="{{ id }}">

        <div class="clear"><div class="right">
            <button class="btn btn-default formbutton-success" type="button" value="{{ btn_save_txt }}" data-submit-form="pageForm" data-form-action="vm/openvz_ostemplate_edit.php">{{ btn_save_txt }}</button>
