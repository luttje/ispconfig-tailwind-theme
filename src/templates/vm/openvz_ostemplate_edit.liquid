<p>{{ list_desc_txt }}</p>


        <legend>Domain</legend>
            <div class="form-group">
                <label for="template_name" class="col-sm-3 control-label">{{ template_name_txt }}</label>
                <div class="col-sm-9"><input type="text" name="template_name" id="template_name" value="{{ template_name }}" class="form-control" /></div></div>
            <div class="form-group">
                <label for="template_file" class="col-sm-3 control-label">{{ template_file_txt }}</label>
                <div class="col-sm-9"><input type="text" name="template_file" id="template_file" value="{{ template_file }}" class="form-control" /></div></div>
            <div class="form-group">
                <label for="server_id" class="col-sm-3 control-label">{{ server_id_txt }}</label>
