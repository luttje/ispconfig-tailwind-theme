{% render '../components/h1', slot: '{{ list_head_txt }}' %}
<p>{{ list_desc_txt }}</p>


        <legend>{{ head_txt }} {{ veid }}</legend>

            {% if msg %}
                <div id="OKMsg"><p>{{ msg }}</p></div>
            {% endif %}
            {% if error %}
                <div id="errorMsg"><h3>{{ error_txt }}</h3><ol>{{ error }}</ol></div>
            {% endif %}

            <div class="form-group">
                <label class="col-sm-3 control-label">{{ start_txt }}</label>
                <div class="col-sm-9"><input class="form-control" type="radio" id="action" value="start" name="action" {{ start_option_enabled }}/></div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label">{{ stop_txt }}</label>
                <div class="col-sm-9"><input class="form-control" type="radio" id="action" value="stop" name="action" {{ stop_option_enabled }}/></div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label">{{ restart_txt }}</label>
                <div class="col-sm-9"><input class="form-control" type="radio" id="action" value="restart" name="action" {{ restart_option_enabled }}/></div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label">{{ ostemplate_txt }}</label>
                <div class="col-sm-9"><input class="form-control" type="radio" style="float:left; margin-right:10px;" id="action" value="ostemplate" name="action" {{ ostemplate_option_enabled }}/></div><div class="col-sm-6"><input type="text" name="ostemplate_name" class="form-control" value="{{ ostemplate_name }}" onclick="$('[name=action]').filter('[value=ostemplate]').attr('checked','checked');" /></div><div class="col-sm-3 input-sm"> &nbsp;{{ ostemplate_desc_txt }}
                </div>
            </div>

        <input type="hidden" name="id" value="{{ id }}">

        <div class="clear"><div class="right">
            <button class="btn btn-default formbutton-success" type="button" value="{{ btn_save_txt }}" data-submit-form="pageForm" data-form-action="vm/openvz_action.php">{{ btn_save_txt }}</button>
            <button class="btn btn-default formbutton-default" type="button" value="{{ btn_cancel_txt }}" data-load-content="vm/openvz_vm_list.php">{{ btn_cancel_txt }}</button>
        </div></div>
