<div class='page-header'>
	<h1 class="text-4xl pb-4 border-b">{{ list_head_txt }}</h1>
</div>


        {% if datalog_changes_count > '0' %}
        <div>
            <div class="systemmonitor-state state-info">
                <div class="status"></div>
                <div class="statusMsg">
                    {{ datalog_changes_txt }}
                    <ul>
                    {% loop datalog_changes %}
                        <li><strong>{{ text }}:</strong> {{ count }}</li>
                    {% endloop %}
                    </ul>
                    {{ datalog_changes_end_txt }}
                </div>
            </div><br />
        </div>
        {% endif %}
        <p class="fieldset-legend">{{ toolsarea_head_txt }}</p>
            
                <button class="btn btn-default formbutton-success" type="button" data-load-content="sites/web_folder_edit.php">{{ add_new_record_txt }}</button>
            
        

    
        <p class="fieldset-legend">{{ list_head_txt }}</p>
            <div class="table-wrapper marginTop15">
<table class='table w-full'>
                <thead class="dark">
                    <tr>
                        <th class="tiny-col" data-column="active">{{ active_txt }}</th>
                        <th data-column="server_id">{{ server_id_txt }}</th>
                        <th data-column="parent_domain_id">{{ parent_domain_id_txt }}</th>
                        <th data-column="path">{{ path_txt }}</th>
                        <th class="small-col text-right">{{ search_limit }}</th>
                    </tr>
                    <tr>
                        <td><select class="form-control" name="search_active" onChange="ISPConfig.submitForm('pageForm','sites/web_folder_list.php');">{{ search_active }}</select></td>
                        <td><select class="form-control" name="search_server_id" onChange="ISPConfig.submitForm('pageForm','sites/web_folder_list.php');">{{ search_server_id }}</select></td>
                        <td><select class="form-control" name="search_parent_domain_id" onChange="ISPConfig.submitForm('pageForm','sites/web_folder_list.php');">{{ search_parent_domain_id }}</select></td>
                        <td><input class="form-control" type="text" name="search_path" value="{{ search_path }}" /></td>
                        <td class="text-right">
                            <button type="button" class="btn btn-default formbutton-default formbutton-narrow" name="Filter" id="Filter" value="{{ filter_txt }}" data-submit-form="pageForm" data-form-action="sites/web_folder_list.php"><span class="icon icon-filter"></span></button>
                        </td>
                    </tr>
                </thead>
                <tbody>
                {% loop records %}
                    <tr>
                        <td><a href="#" data-load-content="sites/web_folder_edit.php?id={{ id }}">{{ active }}</a></td>
                        <td><a href="#" data-load-content="sites/web_folder_edit.php?id={{ id }}">{{ server_id }}</a></td>
                        <td><a href="#" data-load-content="sites/web_folder_edit.php?id={{ id }}">{{ parent_domain_id }}</a></td>
                        <td><a href="#" data-load-content="sites/web_folder_edit.php?id={{ id }}">{{ path }}</a></td>
                        <td class="text-right">
                            <a class="btn btn-default formbutton-danger formbutton-narrow" href="javascript: ISPConfig.confirm_action('sites/web_folder_del.php?id={{ id }}&_csrf_id={{ csrf_id }}&_csrf_key={{ csrf_key }}&phpsessid={{ phpsessid }}','{{ delete_confirmation }}');"><span class="icon icon-delete"></span></a>
                        </td>
                    </tr>
                {% endloop %}
                {% unless records %}
                    <tr class="tbl_row_noresults tbl_row_{% if __EVEN__ %}even{% else %}uneven{% endif %}">
                        <td colspan="5">{{ globalsearch_noresults_text_txt }}</td>
                    </tr>
                {% endunless %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5">{{ paging }}</td>
                    </tr>
                </tfoot>
            </table>
</div>
        
    