{% render '../components/heading/h1', slot: '{{ list_head_txt }}' %}
<p>{{ list_desc_txt }}</p>


{% render '../components/table/fieldset-legend', slot: '{{ list_head_txt }}' %}
{% render '../components/table/start' %}
{% render '../components/table/head-start' %}
    <tr>
        {% render '../components/table/th', name: 'active', label: '{{ active_txt }}', class: 'w-[8%]' %}
        {% render '../components/table/th', name: 'domain', label: '{{ domain_txt }}'%}
        {% render '../components/table/th', name: 'backup_server', label: '{{ backup_server_txt }}'%}
        {% render '../components/table/th', name: 'backup_interval', label: '{{ backup_interval_txt }}'%}
        {% render '../components/table/th', name: 'backup_count', label: '{{ backup_count_txt }}'%}
