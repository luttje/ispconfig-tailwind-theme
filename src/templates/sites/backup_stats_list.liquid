            <td> <a href="#" data-load-content="sites/web_vhost_domain_edit.php?id={{ id }}&type={% if type == 'vhost' %}domain{% endif %}{% if type == 'vhostsubdomain' %}vhost_sub{% endif %}{% if type == 'vhostalias' %}vhost_alias{% endif %}">{{ server_id }}</a> </td>
            <td> <a href="#" data-load-content="sites/web_vhost_domain_edit.php?id={{ id }}&type={% if type == 'vhost' %}domain{% endif %}{% if type == 'vhostsubdomain' %}vhost_sub{% endif %}{% if type == 'vhostalias' %}vhost_alias{% endif %}">{{ backup_interval }}</a> /  <a href="#" data-load-content="sites/web_vhost_domain_edit.php?id={{ id }}&type={% if type == 'vhost' %}domain{% endif %}{% if type == 'vhostsubdomain' %}vhost_sub{% endif %}{% if type == 'vhostalias' %}vhost_alias{% endif %}">{{ backup_copies }}</a> </td>
            <td> <a href="#" data-load-content="sites/web_vhost_domain_edit.php?id={{ id }}&type={% if type == 'vhost' %}domain{% endif %}{% if type == 'vhostsubdomain' %}vhost_sub{% endif %}{% if type == 'vhostalias' %}vhost_alias{% endif %}">{{ backup_copies_exists }}</a> </td>
            <td> <a href="#" data-load-content="sites/web_vhost_domain_edit.php?id={{ id }}&type={% if type == 'vhost' %}domain{% endif %}{% if type == 'vhostsubdomain' %}vhost_sub{% endif %}{% if type == 'vhostalias' %}vhost_alias{% endif %}">{{ backup_size }}</a> </td>
        </tr>
