<h2>{{ list_head_txt }}Import plesk panel data</h2>
<p>{{ list_desc_txt }}</p>

<legend>Plesk data import</legend>
<div class="form-group">
    <label class="col-sm-3 control-label">Plesk database hostname</label>
    <div class="col-sm-9"><input class="form-control"
               type="text"
               id="dbhost"
               value="{{ dbhost }}"
               name="dbhost" /></div>
</div>
<div class="form-group">
    <label class="col-sm-3 control-label">Plesk database name</label>
    <div class="col-sm-9"><input class="form-control"
               type="text"
               id="dbname"
               value="{{ dbname }}"
               name="dbname" /></div>
</div>
<div class="form-group">
    <label class="col-sm-3 control-label">Plesk database user</label>
    <div class="col-sm-9"><input class="form-control"
               type="text"
               id="dbuser"
               value="{{ dbuser }}"
               name="dbuser" /></div>
</div>
<div class="form-group">
    <label class="col-sm-3 control-label">Plesk database password</label>
    <div class="col-sm-9"><input class="form-control"
               type="text"
               id="dbpassword"
               value="{{ dbpassword }}"
               name="dbpassword" /></div>
</div>
<div class="form-group">
    <label class="col-sm-3 control-label">Web content backup file (on this server, optional)</label>
    <div class="col-sm-9"><input class="form-control"
               type="text"
               id="webcontent"
               value="{{ webcontent }}"
               name="webcontent" /></div>
</div>
<div class="form-group">
    <label class="col-sm-3 control-label">Maildir content backup file (on this server, optional)</label>
    <div class="col-sm-9"><input class="form-control"
               type="text"
               id="mailcontent"
               value="{{ mailcontent }}"
               name="mailcontent" /></div>
</div>

<div class="form-group">
    <label class="col-sm-3 control-label">Import all data (that can be imported)</label>
    <div class="col-sm-9"><input class="form-control"
               type="checkbox"
               id="start"
               value="1"
               name="start"
               checked /></div>
</div>
<div class="form-group">
    <label class="col-sm-3 control-label">Import database contents (make sure the database user has the rights to do so)</label>
    <div class="col-sm-9"><input class="form-control"
               type="checkbox"
               id="dbdata"
               value="1"
               name="dbdata"
               checked /></div>
</div>

{% if msg %}
    {% render '../components/msg', id: 'OKMsg', slot: '{{ msg }}' %}
{% endif %}
{% render '../components/error' %}

<input type="hidden"
       name="id"
       value="{{ id }}">

<div class="flex flex-row justify-between gap-4">
    {% render '../components/button/primary', {
        "slot": "{{ btn_cancel_txt }}",
        "attributes": [
            [ "type", "button" ],
            [ "value", "{{ btn_cancel_txt }}" ],
            [ "data-load-content", "tools/index.php" ]
        ]
    } %}

    {% render '../components/button/success', {
        "slot": "Start",
        "attributes": [
            [ "type", "button" ],
            [ "value", "Import" ],
            [ "data-submit-form", "pageForm" ],
            [ "data-form-action", "tools/import_plesk.php" ]
        ]
    } %}
</div>