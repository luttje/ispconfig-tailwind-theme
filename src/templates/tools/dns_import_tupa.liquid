<h1>{{ list_head_txt }}Import DNS records from Tupa PowerDNS controlpanel</h1>
<p>{{ list_desc_txt }}</p>

<div class="form-group">
    <label class="col-sm-3 control-label"
           for="dbhost">Tupa database hostname</label>
    <div class="col-sm-9"><input class="form-control"
               type="text"
               id="dbhost"
               value="{{ dbhost }}"
               name="dbhost" /></div>
</div>
<div class="form-group">
    <label class="col-sm-3 control-label"
           for="dbname">Tupa database name</label>
    <div class="col-sm-9"><input class="form-control"
               type="text"
               id="dbname"
               value="{{ dbname }}"
               name="dbname" /></div>
</div>
<div class="form-group">
    <label class="col-sm-3 control-label"
           for="dbuser">Tupa database user</label>
    <div class="col-sm-9"><input class="form-control"
               type="text"
               id="dbuser"
               value="{{ dbuser }}"
               name="dbuser" /></div>
</div>
<div class="form-group">
    <label class="col-sm-3 control-label"
           for="dbpassword">Tupa database password</label>
    <div class="col-sm-9"><input class="form-control"
               type="text"
               id="dbpassword"
               value="{{ dbpassword }}"
               name="dbpassword" /></div>
</div>
<div class="form-group">
    <label class="col-sm-3 control-label"
           for="dboptions">Tupa database options</label>
    <div class="col-sm-9"
         id="dboptions">
        <label class="checkbox-inline"
               for="dbssl"><input type="checkbox"
                   id="dbssl"
                   value="1"
                   name="dbssl"
                   {% if dbssl == 'true' %}checked{% endif %} /> Use SSL</label>
    </div>
</div>

<input type="hidden"
       name="id"
       value="{{ id }}">
<input type="hidden"
       name="start"
       value="1">

<div class="flex flex-row justify-between gap-4">
    {% render '../components/button/primary', {
        "slot": "Cancel",
        "attributes": [
            [ "type", "button" ],
            [ "value", "Cancel" ],
            [ "data-load-content", "tools/index.php" ]
        ]
    } %}
    {% render '../components/button/success', {
        "slot": "Start",
        "attributes": [
            [ "type", "button" ],
            [ "value", "Import" ],
            [ "data-submit-form", "pageForm" ],
            [ "data-form-action", "tools/dns_import_tupa.php" ]
        ]
    } %}
</div>

{% if msg %}
    {% render '../components/msg', id: 'OKMsg', slot: '{{ msg }}' %}
{% endif %}
{% render '../components/error' %}
