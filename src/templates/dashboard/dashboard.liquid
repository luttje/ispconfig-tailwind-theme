<div class='page-header'>
  <h1 class="text-4xl pb-4 border-b">{{ welcome_user }}</h1>
</div>

{% if error %}
	<div class="alert alert-danger">
		{% for error %}
			{{ error_msg }}
		{% endfor %}
	</div>
{% endif %}
{% if warning %}
	<div class="alert alert-danger">
		{% for warning %}
			{{ warning_msg }}
		{% endfor %}
	</div>
{% endif %}
{% if info %}
	<div class="alert alert-notification">
		{% for info %}
			{{ info_msg }}
		{% endfor %}
	</div>
{% endif %}

{% for leftcol %}
	{{ content }}
{% endfor %}
{% for rightcol %}
	{{ content }}
{% endfor %}
