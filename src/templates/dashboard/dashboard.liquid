{% render '../components/heading/h1', slot: '{{ welcome_user }}' %}

{% if error %}
	<div class="alert alert-danger">
		{% loop error %}
			{{ error_msg }}
		{% endloop %}
	</div>
{% endif %}
{% if warning %}
	<div class="alert alert-danger">
		{% loop warning %}
			{{ warning_msg }}
		{% endloop %}
	</div>
{% endif %}
{% if info %}
	<div class="alert alert-notification">
		{% loop info %}
			{{ info_msg }}
		{% endloop %}
	</div>
{% endif %}

<div class="flex flex-col gap-6">
    {% loop leftcol %}
        <div>
            {{ content }}
        </div>
    {% endloop %}
    {% loop rightcol %}
        <div>
            {{ content }}
        </div>
    {% endloop %}
</div>