<div class="form-group">
    <label class="col-sm-3 control-label"><em>*</em> {{ email_txt }}</label>
    <div class="col-sm-9">
        <div class='input-group'>
            <input type="text" id="email_local_part" name="email_local_part" value="{{ email_local_part }}" class="form-control" />
            <span class='input-group-addon'>@</span>
            <div class='input-group-field'>
                <select name="email_domain" id="email_domain" class="form-control" style="height:50px;min-width:170px;">{{ email_domain }}</select>
            </div>
        </div>
    </div>
</div>
<div class="form-group">
    <label for="destination" class="col-sm-3 control-label"><em>*</em> {{ destination_txt }}</label>
    <div class="col-sm-9"><textarea rows="10" cols="40" name="destination" id="destination" class="form-control">{{ destination }}</textarea></div>
</div>
<div class="form-group">
    <label class="col-sm-3 control-label">{{ send_as_txt }}</label>
    <div class="col-sm-9">
        {{ allow_send_as }} <small> {{ send_as_exp }}</small>
    </div>
</div>
<div class="form-group">
    <label class="col-sm-3 control-label">{{ greylisting_txt }}</label>
    <div class="col-sm-9">
        {{ greylisting }}
    </div>
</div>
<div class="form-group">
    <label class="col-sm-3 control-label">{{ active_txt }}</label>
    <div class="col-sm-9">
        {{ active }}
    </div>
</div>

<input type="hidden" name="id" value="{{ id }}">
<input type="hidden" name="type" value="forward">

