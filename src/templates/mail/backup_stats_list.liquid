{% render '../components/heading/h1', slot: '{{ list_head_txt }}' %}
<p>{{ list_desc_txt }}</p>


        {% render '../components/table/fieldset-legend', slot: '{{ list_head_txt }}' %}
            <div class="table-wrapper mt-1">
<table class='table w-full'>
                <thead class="dark">
					<tr>
						{% render '../components/table/th', name: 'active', label: '{{ active_txt }}', class: 'w-[8%]' %}
						{% render '../components/table/th', name: 'domain', label: '{{ domain_txt }}'%}
						{% render '../components/table/th', name: 'backup_server', label: '{{ backup_server_txt }}'%}
						{% render '../components/table/th', name: 'backup_interval', label: '{{ backup_interval_txt }}'%}
						{% render '../components/table/th', name: 'backup_count', label: '{{ backup_count_txt }}'%}
						{% render '../components/table/th', name: 'backup_size', label: '{{ backup_size_txt }}'%}
					</tr>
{% render '../components/table/head-body' %}
					{% loop records %}
					<tr class="tbl_row_{% if __EVEN__ %}even{% else %}uneven{% endif %}">
						<td> <a href="#" data-load-content="mail/mail_user_edit.php?id={{ id }}">{{ active }}</a> </td>
						<td> <a href="#" data-load-content="mail/mail_user_edit.php?id={{ id }}">{{ email }}</a> </td>
						<td> <a href="#" data-load-content="mail/mail_user_edit.php?id={{ id }}">{{ server_id }}</a> </td>
						<td> <a href="#" data-load-content="mail/mail_user_edit.php?id={{ id }}">{{ backup_interval }}</a> /  <a href="#" data-load-content="mail/mail_user_edit.php?id={{ id }}">{{ backup_copies }}</a> </td>
						<td> <a href="#" data-load-content="mail/mail_user_edit.php?id={{ id }}">{{ backup_copies_exists }}</a> </td>
						<td> <a href="#" data-load-content="mail/mail_user_edit.php?id={{ id }}">{{ backup_size }}</a> </td>
					</tr>
					{% endloop %}
				</tbody>
				<tfoot>
					<tr>
						<td colspan="5">
							{{ paging }}
						</td>
					</tr>
				</tfoot>
            </table>
</div>

    </div>
