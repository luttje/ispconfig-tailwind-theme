<div class='page-header'>
	<h1 class="text-4xl pb-4 border-b">
		{{ do_osupdate_caption }}
	</h1>
</div>
<div class="panel" style="padding:20px;">
	<div class="pnl_formsarea">
		<div class="alert alert-warning">
			<p>
				{{ do_osupdate_desc }}
			</p>
		</div>
		<div class="form-group">
			<label for="server_select" class="col-sm-3 control-label">{{ select_server_txt }}</label>
			<div class="col-sm-9"><select name="server_select" id="server" class="form-control" onchange="$('#OKMsg').hide(); ">
					{{ server_option }}
				</select></div>
		</div>

		{% if msg %}
			<div id="OKMsg">
				<p>
					{{ msg }}
				</p>
			</div>
		{% endif %}

		<div class="clear">
			<div class="right">
				<button class="btn btn-default formbutton-success" type="button" value="{{ btn_do_txt }}" data-submit-form="pageForm" data-form-action="admin/remote_action_osupdate.php">{{ btn_do_txt }}</button>
			</div>
		</div>
	</div>
</div>
