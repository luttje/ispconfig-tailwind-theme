{% if edit_record %}
{% else %}
    {% render '../components/table/start' %}
    {% render '../components/table/head-start' %}
        <tr>
            {% render '../components/table/th', name: 'active', label: '{{ active_txt }}'%}
            {% render '../components/table/th', name: 'name', label: '{{ ca_name_txt }}'%}
            <th></th>
        </tr>
    {% render '../components/table/head-body' %}
        {% loop ca_records %}
            <tr>
                <td>{{ active }}</td>
                <td>{{ name }}</td>
                <td class="text-right">
                    <button class="btn btn-default formbutton-default formbutton-narrow" type="button" onClick="ISPConfig.changeTab('dns_ca','admin/system_config_edit.php?action=edit&id={{ ca_id }}', true);"><span class="icon icon-edit"></span></button>
                    <button class="btn btn-default formbutton-danger formbutton-narrow" type="button" onClick="ISPConfig.changeTab('dns_ca','admin/system_config_edit.php?action=delete&id={{ ca_id }}', true);"><span class="icon icon-delete"></span></button>
                </td>
            </tr>
        {% endloop %}
    {% render '../components/table/end', colspan: '3' %}
{% endif %}
