{% render '../components/heading/h1', slot: '{{ list_head_txt }}' %}
<p>
	{{ list_desc_txt }}
</p>

<div class="panel panel_language_import" style="padding:20px;">
	<div class="pnl_formsarea">
		<div class="form-group">
			<label for="lng_select" class="col-sm-3 control-label">{{ language_select_txt }}</label>
			<div class="col-sm-9"><select name="lng_select" id="lng_select" class="form-control flags">
					{{ language_option }}
				</select></div>
		</div>
		{% if msg %}
			<div id="OKMsg">
				<p>
					{{ msg }}
				</p>
			</div>
		{% endif %}

		<input type="hidden" name="id" value="{{ id }}">

		{% render '../components/form-submit-buttons', cancel_load_content: 'admin/language_list.php', save_form_action: 'admin/language_export.php' %}
	</div>
</div>
