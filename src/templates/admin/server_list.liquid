{% render '../components/heading/h1', slot: '{{ list_head_txt }}' %}
<p>{{ list_desc_txt }}</p>

{% render '../components/table/fieldset-legend', slot: '{{ list_head_txt }}' %}
{% render '../components/table/start' %}
{% render '../components/table/head-start' %}
    <tr>
        <th data-column="server_name"
            width="20%">{{ server_name_txt }}</th>
        {% render '../components/table/th', name: 'mail_server', label: '{{ mail_server_txt }}'%}
        {% render '../components/table/th', name: 'web_server', label: '{{ web_server_txt }}'%}
        {% render '../components/table/th', name: 'dns_server', label: '{{ dns_server_txt }}'%}
        {% render '../components/table/th', name: 'file_server', label: '{{ file_server_txt }}'%}
        {% render '../components/table/th', name: 'db_server', label: '{{ db_server_txt }}'%}
        {% render '../components/table/th', name: 'vserver_server', label: '{{ vserver_server_txt }}'%}
        {% render '../components/table/th', name: 'vserver_server', label: '{{ xmpp_server_txt }}'%}
        {% render '../components/table/th-search-limit' %}
    </tr>
    <tr>
        <td><input class="form-control"
                    type="text"
                    name="search_server_name"
                    value="{{ search_server_name }}" /></td>
        <td><select class="form-control"
                    name="search_active">{{ search_mail_server }}</select></td>
        <td><select class="form-control"
                    name="search_active">{{ search_web_server }}</select></td>
        <td><select class="form-control"
                    name="search_active">{{ search_dns_server }}</select></td>
        <td><select class="form-control"
                    name="search_active">{{ search_file_server }}</select></td>
        <td><select class="form-control"
                    name="search_active">{{ search_db_server }}</select></td>
        <td><select class="form-control"
                    name="search_active">{{ search_vserver_server }}</select></td>
        <td><select class="form-control"
                    name="search_active">{{ search_xmpp_server }}</select></td>
        <td class="text-right">
            <button type="button"
                    class="btn btn-default formbutton-default formbutton-narrow"
                    name="Filter"
                    id="Filter"
                    value="{{ filter_txt }}"
                    data-submit-form="pageForm"
                    data-form-action="admin/server_list.php"><span class="icon icon-filter"></span></button>
        </td>
    </tr>
{% render '../components/table/head-body' %}
    {% loop records %}
    <tr>
        <td><a href="#"
                data-load-content="admin/server_edit.php?id={{ id }}">{{ server_name }}</a></td>
        <td>{{ mail_server }}</td>
        <td>{{ web_server }}</td>
        <td>{{ dns_server }}</td>
        <td>{{ file_server }}</td>
        <td>{{ db_server }}</td>
        <td>{{ vserver_server }}</td>
        <td>{{ xmpp_server }}</td>
        <td class="text-right">
            <a class="btn btn-default formbutton-danger formbutton-narrow"
                href="javascript: ISPConfig.confirm_action('admin/server_del.php?id={{ id }}&_csrf_id={{ csrf_id }}&_csrf_key={{ csrf_key }}&phpsessid={{ phpsessid }}','{{ delete_confirmation }}');"><span class="icon icon-delete"></span></a>
        </td>
    </tr>
    {% endloop %}
{% render '../components/table/end', colspan: '9' %}
