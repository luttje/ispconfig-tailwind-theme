<div class="form-group">
	<label for="server_id" class="col-sm-3 control-label">{{ server_id_txt }}</label>
	<div class="col-sm-9">
		<select name="server_id" id="server_id" class="form-control">
			{{ server_id }}
		</select>
	</div>
</div>

<div class="form-group">
	<label for="source_ip" class="col-sm-3 control-label">{{ source_txt }}</label>
	<div class="col-sm-9">
		<select name="source_ip" id="source_ip" class="form-control">
			{{ source_ip }}
		</select>
	</div>
</div>

<div class="form-group">
	<label for="destination_ip" class="col-sm-3 control-label">{{ destination_txt }}</label>
	<div class="col-sm-9">
		<input type="text" name="destination_ip" id=destination_ip" value="{{ destination_ip }}" class="form-control" />
	</div>
</div>

<div class="form-group">
	<label class="col-sm-3 control-label">{{ active_txt }}</label>
	<div class="col-sm-9">
		{{ active }}
	</div>
</div>

<div class="form-group">
	<input type="hidden" name="id" value="{{ id }}">
 	{% render '../components/form-submit-buttons', cancel_load_content: 'admin/server_ip_map_list.php', save_form_action: 'admin/server_ip_map_edit.php' %}
</div>
