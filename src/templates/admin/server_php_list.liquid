{% render '../components/heading/h1', slot: '{{ list_head_txt }}' %}

<p class="fieldset-legend">{{ toolsarea_head_txt }}</p>

{% render '../components/button/primary', {
    "slot": "{{ add_new_record_txt }}",
    "attributes": [
        [ "type", "button" ],
        [ "value", "{{ add_new_record_txt }}" ],
        [ "data-load-content", "admin/server_php_edit.php"]
    ]
} %}

{% render '../components/table/fieldset-legend', slot: '{{ list_head_txt }}' %}
{% render '../components/table/start' %}
{% render '../components/table/head-start' %}
            <tr>
                <th class="tiny-col"
                    data-column="active">{{ active_txt }}</th>
                <th data-column="server_id">{{ server_id_txt }}</th>
                <th class="small-col"
                    data-column="client_id">{{ client_id_txt }}</th>
                <th data-column="name">{{ name_txt }}</th>
                <th class="small-col"
                    data-column="sortprio">{{ sortprio_txt }}</th>
                <th data-column="usage">{{ usage_txt }}</th>
                <th class="text-right">{{ search_limit }}</th>
            </tr>
            <tr>
                <td><select class="form-control"
                            name="search_active">{{ search_active }}</select></td>
                <td><select class="form-control"
                            name="search_server_id">{{ search_server_id }}</select></td>
                <td><select class="form-control"
                            name="search_client_id">{{ search_client_id }}</select></td>
                <td><input class="form-control"
                           type="text"
                           name="search_name"
                           value="{{ search_name }}" /></td>
                <td></td>
                <td></td>
                <td class="text-right">
                    <button type="button"
                            class="btn btn-default formbutton-default formbutton-narrow"
                            name="Filter"
                            id="Filter"
                            value="{{ filter_txt }}"
                            data-submit-form="pageForm"
                            data-form-action="admin/server_php_list.php"><span class="icon icon-filter"></span></button>
                </td>
            </tr>
{% render '../components/table/head-body' %}
            {% loop records %}
            <tr>
                <td><a href="#"
                       data-load-content="admin/server_php_edit.php?id={{ id }}">{{ active }}</a></td>
                <td><a href="#"
                       data-load-content="admin/server_php_edit.php?id={{ id }}">{{ server_id }}</a></td>
                <td><a href="#"
                       data-load-content="admin/server_php_edit.php?id={{ id }}">{{ client_id }}</a></td>
                <td><a href="#"
                       data-load-content="admin/server_php_edit.php?id={{ id }}">{{ name }}</a></td>
                <td class="text-center"><a href="#"
                       data-load-content="admin/server_php_edit.php?id={{ id }}">{{ sortprio }}</a></td>
                <td class="text-center"><a href="#"
                       data-load-content="admin/server_php_edit.php?id={{ id }}">{{ usage }}</a></td>
                <td class="text-right">
                    <a class="btn btn-default formbutton-danger formbutton-narrow"
                       href="javascript: ISPConfig.confirm_action('admin/server_php_del.php?id={{ id }}&_csrf_id={{ csrf_id }}&_csrf_key={{ csrf_key }}&phpsessid={{ phpsessid }}','{{ delete_confirmation }}');"><span
                              class="icon icon-delete"></span></a>
                </td>
            </tr>
            {% endloop %}
            {% unless records %}
            <tr class="tbl_row_noresults tbl_row_{% if __EVEN__ %}even{% else %}uneven{% endif %}">
                <td colspan="6">{{ globalsearch_noresults_text_txt }}</td>
            </tr>
            {% endunless %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6">{{ paging }}</td>
            </tr>
        </tfoot>
    </table>
</div>
