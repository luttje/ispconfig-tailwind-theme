	<label for="ca_iodef" class="col-sm-2 control-label">{{ ca_iodef_txt }}</label>
	<div class="col-sm-6"><textarea class="form-control" name="ca_iodef" id="ca_iodef" rows='5' cols='30'>{{ ca_iodef }}</textarea></div>
</div>
-->
<div class="form-group">
    <label class="col-sm-2 control-label">{{ active_txt }}</label>
	<div class="col-sm-6"><input type="checkbox" value="{{ active }}" id="active" name="active" {% if active == 'Y' %}checked{% endif %} /></div>
</div>

<div class="flex flex-row justify-between gap-4">
    {% render '../components/button/primary', {
        "slot": "{{ btn_cancel_txt }}",
        "attributes": [
            [ "type", "button" ],
            [ "value", "{{ btn_cancel_txt }}" ],
            [ "data-load-content", "admin/system_config_edit.php?next_tab=dns_ca" ]
        ]
    } %}
    {% render '../components/button/success', {
        "slot": "{{ btn_save_txt }}",
        "attributes": [
            [ "type", "button" ],
            [ "value", "{{ btn_save_txt }}" ],
            [ "onclick", "ISPConfig.changeTab('dns_ca','admin/system_config_edit.php?action=save&id={{ id }}', true);" ]
        ]
    } %}
</div>
{% endif %}
