{% render '../components/heading/h1', slot: '{{ list_head_txt }}' %}
<p>{{ list_desc_txt }}</p>

<p class="fieldset-legend">{{ toolsarea_head_txt }}</p>

{% render_json '../components/button/primary', {
    "slot": "{{ add_new_record_txt }}",
    "attributes": [
        [ "type", "button" ],
        [ "value", "{{ add_new_record_txt }}" ],
        [ "data-load-content", "client/reseller_edit.php"]
    ]
} %}

<p class="fieldset-legend">{{ list_head_txt }}</p>
<div class="table-wrapper mt-1">
    <table class='table w-full'>
        <thead class="dark">
            <tr>
                <th class="small-col"
                    data-column="client_id">{{ client_id_txt }}</th>
                <th data-column="company_name">{{ company_name_txt }}</th>
                <th data-column="contact_name">{{ contact_name_txt }}</th>
                <th data-column="customer_no">{{ customer_no_txt }}</th>
                <th data-column="username">{{ username_txt }}</th>
                <th data-column="city">{{ city_txt }}</th>
                <th data-column="country">{{ country_txt }}</th>
                <th class="small-col text-right">{{ search_limit }}</th>
            </tr>
            <tr>
                <td><input class="form-control"
                           type="text"
                           name="search_client_id"
                           value="{{ search_client_id }}" /></td>
                <td><input class="form-control"
                           type="text"
                           name="search_company_name"
                           value="{{ search_company_name }}" /></td>
                <td><input class="form-control"
                           type="text"
                           name="search_contact_name"
                           value="{{ search_contact_name }}" /></td>
                <td><input class="form-control"
                           type="text"
                           name="search_customer_no"
                           value="{{ search_customer_no }}" /></td>
                <td><input class="form-control"
                           type="text"
                           name="search_username"
                           value="{{ search_username }}" /></td>
                <td><input class="form-control"
                           type="text"
                           name="search_city"
                           value="{{ search_city }}" /></td>
                <td><select class="form-control flags"
                            name="search_country">{{ search_country }}</select></td>
                <td class="text-right">
                    <button type="button"
                            class="btn btn-default formbutton-default formbutton-narrow"
                            name="Filter"
                            id="Filter"
                            value="{{ filter_txt }}"
                            data-submit-form="pageForm"
                            data-form-action="client/reseller_list.php"><span class="icon icon-filter"></span></button>
                </td>
            </tr>
        </thead>
        <tbody>
            {% loop records %}
            <tr>
                <td><a href="#"
                       data-load-content="client/reseller_edit.php?id={{ id }}">{{ client_id }}</a></td>
                <td><a href="#"
                       data-load-content="client/reseller_edit.php?id={{ id }}">{{ company_name }}</a></td>
                <td><a href="#"
                       data-load-content="client/reseller_edit.php?id={{ id }}">{{ contact_name }}</a></td>
                <td><a href="#"
                       data-load-content="client/reseller_edit.php?id={{ id }}">{{ customer_no }}</a></td>
                <td><a href="#"
                       data-load-content="client/reseller_edit.php?id={{ id }}"
                       x-tooltip.placement.bottom.raw="{{ username }}">{{ username }}</a></td>
                <td><a href="#"
                       data-load-content="client/reseller_edit.php?id={{ id }}">{{ city }}</a></td>
                <td><a href="#"
                       data-load-content="client/reseller_edit.php?id={{ id }}"><span
                              class="flags flag-{{ countryiso }}">{{ country }}</span></a></td>
                <td class="text-right">
                    <a class="btn btn-default formbutton-success formbutton-narrow"
                       data-load-content="login/login_as.php?cid={{ id }}"><span class="icon icon-loginas"></span></a>
                    <a class="btn btn-default formbutton-danger formbutton-narrow"
                       href="javascript: ISPConfig.confirm_action('client/reseller_del.php?id={{ id }}&_csrf_id={{ csrf_id }}&_csrf_key={{ csrf_key }}&phpsessid={{ phpsessid }}','{{ delete_confirmation }}');"><span
                              class="icon icon-delete"></span></a>
                </td>
            </tr>
            {% endloop %}
            {% unless records %}
            <tr class="tbl_row_noresults tbl_row_{% if __EVEN__ %}even{% else %}uneven{% endif %}">
                <td colspan="8">{{ globalsearch_noresults_text_txt }}</td>
            </tr>
            {% endunless %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="8">{{ paging }}</td>
            </tr>
        </tfoot>
    </table>
</div>
